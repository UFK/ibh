<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id='script.module.parsedom' version='1.2.0' name='Parsedom for xbmc plugins' provider-name='TheCollective'>
  <requires>
    <import addon='xbmc.python' version='2.0'/>
  </requires>
  <extension point='xbmc.addon.metadata'>
    <platform>all</platform>
    <summary lang='en'>Parsedom for xbmc plugins.</summary>
  </extension>
  <extension point='xbmc.python.module' library='lib' />
</addon>

<addon id='plugin.video.youtube' version='3.2.2' name='YouTube' provider-name='TheCollective'>
  <requires>
    <import addon='xbmc.python' version='2.0'/>
    <import addon='script.module.simplejson' version='2.0.10'/>
    <import addon='script.module.parsedom' version='1.2.0'/>
    <import addon='script.module.simple.downloader' version='0.9.3'/>
  </requires>
  <extension point='xbmc.python.pluginsource' library='default.py'>
        <provides>video</provides>
  </extension>
  <extension point='xbmc.addon.metadata'>
    <platform>all</platform>
    <summary lang='en'>YouTube video plugin</summary>
    <description lang='en'>Plugin that lets you browse and play videos from everybody's favorite video site!</description>
    <disclaimer lang='en'>Some parts of this addon may not be legal in your country of residence - please check with your local laws before installing.</disclaimer>
    <summary lang='bg'>Видео добавка за YouTube</summary>
    <description lang='bg'>Добавката ви позволява да разглеждате и гледате видео клипове от любимия на на всички видео сайт!</description>
    <disclaimer lang='bg'>Някои части от добавката може да са незаконни в държавата, в която се намирате - моля, проверете местните закони, преди да я инсталирате.</disclaimer>
  </extension>
</addon>

<addon id="repository.ibh" name="UFK's XBMC Addons" version="0.0.1" provider-name="ufk">
  <extension point="xbmc.addon.repository" name="UFK's XBMC Addon Repository">
    <info compressed="false">https://github.com/ufk/ibh/raw/master/addons.xml</info>
    <checksum>https://github.com/ufk/ibh/raw/master/addons.xml.md5</checksum>
    <datadir zip="true">https://github.com/ufk/ibh/raw/master/addons/</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Install UFK's Addons</summary>
    <description>Download and install addons by UFK</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>
